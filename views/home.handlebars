<div class="pure-g">
  <div class="pure-u-1">
    <p>This is a row</p>
  </div>
</div>
<div class="pure-g">
  {{#loop 3}}
    <div class="pure-u-1-3">
      <div class="bordered">
        <p>Column {{this}}</p>
        <p>Non Responsive</p>
      </div>
    </div>
  {{/loop}}
</div>
<div class="pure-g">
  {{#loop 4}}
    <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-4">
      <div class="bordered">
        <p>Column {{this}}</p>
        <p>Responsive</p>
      </div>
    </div>
  {{/loop}}
</div>
<div class="pure-g">
  {{#loop 3}}
    <div class="pure-u" style="width: {{this}}00px;">
      <div class="bordered">
        <p>Column {{this}}</p>
        <p>Fixed width: {{this}}00px</p>
      </div>
    </div>
  {{/loop}}
</div>
